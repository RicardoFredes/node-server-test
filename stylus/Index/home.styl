.Posts
  .PostItem
    width 320px
    margin auto
    padding-bottom 24px
    border-bottom 1px solid #EEE
    .PostItemImage
      width 100%
      height 0
      padding-bottom 50%
      overflow hidden
      display block
      img
        max-width 100%
        height auto
    .PostItemInfo
      font-size .8em
      color $color_light_gray
      margin 16px 0 0
    .PostItemTitle
      color $color_primmary
      text-decoration none
      h1, h2, h3
        margin 8px 0 0
        padding 0
        line-height 1.2em
        font-size 1.4em
    .PostItemContent
      font-size 1em
      color $color_gray
      p
        margin 8px 0  
    .PostItemDate
      font-size .8em
      color $color_light_gray
      